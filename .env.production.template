# Production Environment Configuration Template
# IMPORTANT: Copy this file to .env.production and fill in the actual values

NODE_ENV=production

# JWT Configuration
# CRITICAL: Generate a strong secret key (at least 32 characters)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY

# CORS Configuration (comma-separated origins)
# Add your mobile app domains here
ALLOWED_ORIGINS=https://your-app.com,https://api.your-app.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Database URLs (per service)
# Use PostgreSQL connection strings in production
AUTH_DATABASE_URL=postgresql://user:password@host:5432/kai_auth
CONTENT_DATABASE_URL=postgresql://user:password@host:5432/kai_content
LEARNING_DATABASE_URL=postgresql://user:password@host:5432/kai_learning
GAMIFICATION_DATABASE_URL=postgresql://user:password@host:5432/kai_gamification
NOTIFICATION_DATABASE_URL=postgresql://user:password@host:5432/kai_notification

# Redis
REDIS_HOST=redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Kafka
KAFKA_BROKERS=kafka-broker-1:9092,kafka-broker-2:9092,kafka-broker-3:9092
