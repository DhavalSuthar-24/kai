# Development Environment Configuration
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Sentry (optional)
# SENTRY_DSN=

# Database URLs (per service)
# Auth Service
AUTH_DATABASE_URL=file:./auth.db

# Content Service
CONTENT_DATABASE_URL=file:./content.db

# Learning Service
LEARNING_DATABASE_URL=file:./learning.db

# Gamification Service
GAMIFICATION_DATABASE_URL=file:./gamification.db

# Notification Service
NOTIFICATION_DATABASE_URL=file:./notification.db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka
KAFKA_BROKERS=localhost:9092
